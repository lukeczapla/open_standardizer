  <Actions>
    <ClearStereo Type="Chirality,DoubleBond,SingleUpOrDownBond"/>

    <!-- Remove salts (ChemAxon equivalent) -->
    <RemoveFragment Method="removeSalts"/>

    <RemoveAttachedData/>
    <ClearAtomValues/>
    <RemoveExplicitH/>
